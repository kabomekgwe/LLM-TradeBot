# Trading Bot Environment Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to git (protected by .gitignore)

# ============================================================
# EXCHANGE API CREDENTIALS
# ============================================================
# Get API keys from your exchange's API management page
# Enable futures/spot trading permissions as needed
# Use testnet keys for testing (recommended)

# Binance Futures (perpetual contracts)
BINANCE_FUTURES_API_KEY=your_binance_futures_key_here
BINANCE_FUTURES_API_SECRET=your_binance_futures_secret_here

# Binance Spot (spot trading)
BINANCE_SPOT_API_KEY=your_binance_spot_key_here
BINANCE_SPOT_API_SECRET=your_binance_spot_secret_here

# Kraken
KRAKEN_API_KEY=your_kraken_key_here
KRAKEN_API_SECRET=your_kraken_secret_here

# Coinbase
COINBASE_API_KEY=your_coinbase_key_here
COINBASE_API_SECRET=your_coinbase_secret_here

# Alpaca (stocks/crypto)
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_API_SECRET=your_alpaca_secret_here

# Paper Trading (simulated - no real credentials needed)
PAPER_API_KEY=test_key
PAPER_API_SECRET=test_secret

# ============================================================
# TRADING CONFIGURATION
# ============================================================

# Default provider (binance_futures, binance_spot, kraken, coinbase, alpaca, paper)
TRADING_PROVIDER=binance_futures

# Testnet mode (true = safe testing, false = REAL MONEY!)
TRADING_TESTNET=true

# Risk Management
TRADING_MAX_POSITION_SIZE_USD=1000.0
TRADING_MAX_DAILY_DRAWDOWN_PCT=5.0
TRADING_MAX_OPEN_POSITIONS=3

# Agent Configuration
TRADING_DECISION_THRESHOLD=0.6
TRADING_ENABLE_ML_PREDICTIONS=true
TRADING_ENABLE_ADVERSARIAL_VOTING=true

# ============================================================
# NOTIFICATION SERVICES (Optional)
# ============================================================

# Master notification switch
NOTIFICATIONS_ENABLED=false

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Discord Webhook
DISCORD_WEBHOOK=your_discord_webhook_url_here

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password_here
EMAIL_TO=recipient@example.com
EMAIL_FROM=your_email@gmail.com

# Slack Webhook
SLACK_WEBHOOK=your_slack_webhook_url_here

# ============================================================
# WEB DASHBOARD (Optional)
# ============================================================

DASHBOARD_ENABLED=false
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5173

# ============================================================
# SECURITY NOTES
# ============================================================
# - Keep this file secret - it contains sensitive credentials
# - Never commit .env to version control
# - Use testnet/paper trading for development
# - Rotate keys regularly
# - Use API keys with minimal necessary permissions
# - Enable IP whitelisting on exchange if available
